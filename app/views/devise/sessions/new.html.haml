
.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          %h3.panel-title Please Sign In
        .panel-body
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            - flash.each do |key, value|
              %div{:class => "alert alert-#{key}"}= value
            %fieldset
              .form-group
                = f.email_field :email, autofocus: true, autocomplete: "email" , :placeholder => "E-mail",:required => true, class: "form-control"
              .form-group
                = f.password_field :password, autocomplete: "off" , :placeholder => "Password",:required => true, class: "form-control"
              - if devise_mapping.rememberable? 
                .checkbox
                  %label
                    = f.check_box :remember_me
                    Remember Me
              / Change this to a button or input when using this as a form
              = f.submit "Log in", class: "btn btn-lg btn-success btn-block"
