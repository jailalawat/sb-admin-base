- model_class = Preset
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @preset.title
%p
  %strong= model_class.human_attribute_name(:path) + ':'
  %br
  = image_tag @preset.path[:sm_square].url if @preset.path_data != ""
%p
  %strong= model_class.human_attribute_name(:category_id) + ':'
  %br
  = @preset.category.title if @preset.category
%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @preset.status


= link_to t('.back', :default => t("helpers.links.back")), presets_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_preset_path(@preset), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), preset_path(@preset), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
